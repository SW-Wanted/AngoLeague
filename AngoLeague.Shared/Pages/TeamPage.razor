@page "/team"

<h3>Cadastro de Equipe</h3>

<div class="container mt-5">
    <h2 class="text-center">Cadastre Sua Equipe</h2>
    <form class="mt-4" @onsubmit="CadastrarEquipe">

        <!-- Logo da Equipe -->
        <div class="mb-3">
            <label for="teamLogo" class="form-label">Logo da Equipe</label>
            <input type="file" class="form-control" id="teamLogo" @bind="teamLogo" accept="image/*" />
        </div>

        <!-- Nome da Equipe -->
        <div class="mb-3">
            <label for="teamName" class="form-label">Nome da Equipe</label>
            <input type="text" class="form-control" id="teamName" @bind="teamName" required />
        </div>

        <!-- Número de Jogadores -->
        <div class="mb-3">
            <label for="teamMembers" class="form-label">Número de Jogadores</label>
            <input type="number" class="form-control" id="teamMembers" @bind="teamMembers" required min="1" />
        </div>

        <!-- Representante -->
        <div class="mb-3">
            <label for="representative" class="form-label">Representante</label>
            <input type="text" class="form-control" id="representative" @bind="representative" required />
        </div>

        <!-- Local da Equipe -->
        <div class="mb-3">
            <label for="teamLocation" class="form-label">Local da Equipe</label>
            <input type="text" class="form-control" id="teamLocation" @bind="teamLocation" required />
        </div>

        <!-- Contato da Equipe -->
        <div class="mb-3">
            <label for="contact" class="form-label">Contato (Número de Telefone)</label>
            <input type="tel" class="form-control" id="contact" @bind="contact" placeholder="Exemplo: 912345678" />
        </div>

        <!-- Observações (opcional) -->
        <div class="mb-3">
            <label for="observations" class="form-label">Observações (opcional)</label>
            <textarea class="form-control" id="observations" @bind="observations" rows="3"></textarea>
        </div>

        <!-- Botão de Cadastro -->
        <button type="submit" class="btn btn-success">Cadastrar</button>
    </form>
</div>

@code {
    private string teamName;
    private int teamMembers;
    private string representative;
    private string teamLocation;
    private string contact;
    private string observations;
    private string teamLogo;

    private void CadastrarEquipe()
    {
        Console.WriteLine($"Equipe {teamName} cadastrada com {teamMembers} jogadores!");
        Console.WriteLine($"Representante: {representative}, Local: {teamLocation}, Contato: {contact}");
        if (!string.IsNullOrEmpty(observations))
            Console.WriteLine($"Observações: {observations}");

        if (!string.IsNullOrEmpty(teamLogo))
            Console.WriteLine($"Logo da Equipe: {teamLogo}");

        // Adicionar lógica para salvar os dados (enviar para o backend, exibir uma confirmação, etc.)
    }
}
